#include<lpc21xx.h>
	#define led1 1<<0
	#define led2 1<<1
	#define led3 1<<2
	#define led4 1<<3
	#define  sw1 14
	#define  sw2 15
	#define  sw3 16
	#define  sw4 17
	int main()
	{
   	IODIR0=0X0F;
	IOSET0=0X0F;
	while(1)
	{
	if(((IOPIN0>>sw1)&1)==0)
	IOCLR0=led1;
	else if(((IOPIN0>>sw2)&1)==0)
	IOCLR0=led2;
	else if(((IOPIN0>>sw3)&1)==0)
	IOCLR0=led3;
	else if(((IOPIN0>>sw4)&1)==0)
	IOCLR0=led4;
	else
	IOSET0=0X0F;
	}
	}
