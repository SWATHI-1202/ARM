#include<lpc21xx.h>
	#include<DELAY.h>
	#define lcd_d 0XFF<<0
	#define rs 1<<8
	#define E 1<<9
	void Init(void);
	void command(unsigned char);
	void str(unsigned char*s);
	void data(unsigned char);
	int main()
	{
	Init();
	command(0X80);
	str("SWATHI");
	}
	void Init(void)
	{
	IODIR0=lcd_d|rs|E;
	command(0X01);
	command(0X02);
	command(0X0C);
	command(0X38);
	}
	void command(unsigned char cmd)
	{
	IOCLR0=lcd_d;
	IOSET0=cmd;
	IOCLR0=rs;
	IOSET0=E;
	delay_ms(2);
	IOCLR0=E;
	}
	void str(unsigned char* s)
	{
	while(*s)
	data(*s++);
	}
	void data(unsigned char d)
	{
	IOCLR0=lcd_d;
	IOSET0=d;
	IOSET0=rs;
	IOSET0=E;
	delay_ms(2);
	IOCLR0=E;
	}
